# ServcoApp Production Environment Configuration
# Copy this file to backend/.env on your production server
# IMPORTANT: Update all values marked with CHANGE_THIS

APP_NAME=ServcoApp
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://CHANGE_THIS_YOUR_DOMAIN.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database - Update with your production credentials
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=servco_prod
DB_USERNAME=servco
DB_PASSWORD=CHANGE_THIS_APP_PASSWORD

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.CHANGE_THIS_YOUR_DOMAIN.com
SESSION_SECURE_COOKIE=true

# Broadcasting & Queue
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Cache
CACHE_STORE=database

# Google API Configuration (if using Google services)
GOOGLE_APPLICATION_CREDENTIALS=/var/www/servco/backend/storage/credentials/google-service-account.json
GOOGLE_IMPERSONATE_USER=CHANGE_THIS_GOOGLE_USER@yourdomain.com

# Gemini API (if using AI features)
GEMINI_API_KEY=CHANGE_THIS_GEMINI_KEY

# Mail Configuration (optional - configure if needed)
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=CHANGE_THIS_MAIL_USER
MAIL_PASSWORD=CHANGE_THIS_MAIL_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@CHANGE_THIS_YOUR_DOMAIN.com"
MAIL_FROM_NAME="${APP_NAME}"

# Sanctum (API authentication)
SANCTUM_STATEFUL_DOMAINS=CHANGE_THIS_YOUR_DOMAIN.com,www.CHANGE_THIS_YOUR_DOMAIN.com
